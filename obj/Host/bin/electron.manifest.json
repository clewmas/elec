{
  "executable": "elec",
  "splashscreen": {
    "imageFile": "/wwwroot/img/microcomp-logo.png"
  },
  "name": "elec",
  "author": "",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.elec.app",
    "productName": "elec",
    "copyright": "Copyright Â© 2020",
    "buildVersion": "1.0.0",
    "publish": {
      "provider": "generic",
      "url": "http://localhost:82",
      "channel": "latest"
    },
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}